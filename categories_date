<script>
    $(function () {
			   var _hash = insertStr(window.location.hash,1,"a");
				 $('#myTab a[href="/date/'+ _hash+'"]').tab('show');
    });
		function insertStr(str1,n,str2){
            if(str1.length<n){
                return str1+str2;
            }else{
                s1 = str1.substring(0,n);
                s2 = str1.substring(n,str1.length);
                return s1+str2+s2;
            }
        }
</script>
